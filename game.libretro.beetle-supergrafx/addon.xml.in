<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.beetle-supergrafx"
		name="NEC - PC Engine SuperGrafx (Beetle SuperGrafx)"
		version="1.29.0.47"
		provider-name="Mednafen Team">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.pce" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>SGX</platforms>
		<extensions>pce|sgx|cue|ccd|chd|toc|m3u</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<requires_opengl>false</requires_opengl>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>GPLv2</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.beetle-supergrafx</source>
		<assets>
			<icon>resources/icon.png</icon>
			<screenshot>resources/screenshot-01.jpg</screenshot>
			<screenshot>resources/screenshot-02.jpg</screenshot>
			<screenshot>resources/screenshot-03.jpg</screenshot>
		</assets>
		<summary lang="da_DK">NEC - PC Engine SuperGrafx (Beetle SuperGrafx)</summary>
		<summary lang="en_GB">NEC - PC Engine SuperGrafx (Beetle SuperGrafx)</summary>
		<summary lang="es_ES">NEC - PC Engine SuperGrafx (Beetle SuperGrafx)</summary>
		<summary lang="zh_CN">NEC - PC 引擎 SuperGrafx (Beetle SuperGrafx)</summary>
		<description lang="da_DK">Beetle SuperGrafx er en PC Engine-emulator. Det blev overført fra Mednafen PCE Fast til libretro.</description>
		<description lang="de_DE">Beetle SuperGrafx ist ein PC-Engine-Emulator. Er wurde von Mednafen PCE Fast auf libretro portiert.</description>
		<description lang="en_GB">Beetle SuperGrafx is a PC Engine emulator. It was ported from Mednafen PCE Fast to libretro.</description>
		<description lang="es_ES">Beetle SuperGrafx es un emulador de PC Engine. Fue adaptado de Mednafen PCE Fast a libretro.</description>
		<description lang="zh_CN">Beetle SuperGrafx 是一款 PC 引擎模拟器。它是从 Mednafen PCE Fast 移植到 libretro 的。</description>
	</extension>
</addon>
